<div class="row-fluid">
  <div class="span2">
    <%= render "devise/shared/links" %>
  </div>

  <div class="span10">
    <h1><%= t('users.sign_up.title') %></h1>

    <p class="lead"><%= t('users.sign_up.intro') %></p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <%= field_set_tag do %>
        <%= f.input :email, :autofocus => true %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>

        <%= f.button :submit, t('users.sign_up.submit') %>
      <% end %>
    <% end %>

  </div>
</div>
