<%= simple_form_for(@album) do |f| %>
  <%= f.error_notification %>

  <div class="panel panel-primary">

    <div class="panel-heading">
      <h3 class="panel-title"><%= @album.new_record? ? 'New' : 'Edit' %> Album</h3>
    </div>

    <div class="panel-body">
      <%= f.input :name %>
      <%= f.input :public %>
      <p>In order to share an album, you need to make it public first.</p>
    </div>

    <div class="panel-footer">
      <%= link_to 'Back', @album.new_record? ? root_path : @album, class: 'btn btn-default' %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>


<% end %>
