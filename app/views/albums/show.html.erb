<%= breadcrumbs do %>
  <%= breadcrumb 'Home', root_path %>
  <%= breadcrumb @album.name, album_path(@album) %>
<% end %>

<div class="row-fluid albums">
  <div class="span12">
    <h1>
      <%= @album.name %>
    </h1>

    <% if user_signed_in? %>
      <div class="btn-group">
        <%= link_to 'Share album', share_album_path(@album), class: 'btn btn-success' if @album.public && can?(:share, Album) %>
        <%= link_to 'Upload photo', new_album_photo_path(@album), class: 'btn' if can? :create, Photo %>
        <%= link_to 'Edit album', edit_album_path(@album), class: 'btn' if can? :edit, Album %>
        <%= link_to 'Delete', album_path(@album), method: :delete, confirm: 'Are you sure?',
              class: 'btn' if can? :delete, Album %>
      </div>
    <% end %>
  </div>
</div>

<div class="row-fluid clearfix">
  <div class="span12">
    <ul class="thumbnails photos">
      <%= render @photos %>
    </ul>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= paginate @photos %>
  </div>
</div>