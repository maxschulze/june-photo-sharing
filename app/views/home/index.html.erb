<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-12">
      <div class="btn-group">
        <%= link_to 'Add album', new_album_path, class: 'btn btn-default' if can? :create, Album %>
      </div>
    </div>
  </div>

  <hr>
<% end %>

<div class="row albums">
  <%= render @albums %>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= paginate @albums %>
  </div>
</div>