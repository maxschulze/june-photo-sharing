<% if user_signed_in? %>
  <div class="row-fluid" id="start">
    <div class="span12">
      <div class="btn-group">
        <%= link_to 'Add album', new_album_path, class: 'btn' if can? :create, Album %>
      </div>
    </div>
  </div>

  <hr>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <ul class="thumbnails albums">
      <%= render @albums %>
    </ul>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= paginate @albums %>
  </div>
</div>